<h1>Create a Booking!</h1>

<%=form_for @booking, url: {action: "create"} do |f| %>

  <%= f.hidden_field :user_id %>
  <!-- <%= f.hidden_field :restaurant_id %> -->

<div class="field">
  <%= f.label :date %>
  <%= f.date_field :date %>
</div>

<div class='field'>
    <%= f.label :time %>
    <%= f.time_field :time %>
  </div>

  <div class='field'>
    <%= f.label :party_size %>
    <%= f.number_field :party_size %>
  </div>

  <%= f.submit 'Confirm Booking' %>

  <% end %>
