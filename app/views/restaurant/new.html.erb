<h1>Sign Up Your Restaurant To SeatYourself And See Your Seats Fill Up Instantly!</h1>

<%=form_for @restaurants, url: {action: "create"} do |f| %>

<div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>

<div class='field'>
    <%= f.label :street_address %>
    <%= f.text_field :street_address %>
  </div>

  <div class='field'>
    <%= f.label :neighbourhood %>
    <%= f.text_field :neighbourhood %>
  </div>

  <div class='field'>
    <%= f.label :menu %>
    <%= f.text_field :menu %>
  </div>

  <div class='field'>
    <%= f.label :summary %>
    <%= f.text_field :summary %>
  </div>

  <div class='field'>
    <%= f.label :price_range %>
    <%= f.text_field :price_range %>
  </div>

  <div class='field'>
    <%= f.label :opening_time %>
    <%= f.time_field :opening_time %>
  </div>

  <div class='field'>
    <%= f.label :closing_time%>
    <%= f.time_field :closing_time %>
  </div>

  <%= f.submit 'Sign Up' %>

<% end %>
